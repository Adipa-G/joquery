<?xml version="1.0" encoding="UTF-8"?>
<project name="joquery" default="all">
  
  
  <property file="joquery.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.orig/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.apk"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.ane"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <include name="**/?*.properties"/>
    <include name="**/?*.xml"/>
    <include name="**/?*.gif"/>
    <include name="**/?*.png"/>
    <include name="**/?*.jpeg"/>
    <include name="**/?*.jpg"/>
    <include name="**/?*.html"/>
    <include name="**/?*.dtd"/>
    <include name="**/?*.tld"/>
    <include name="**/?*.ftl"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.jdk" value="${jdk.home.jdk}/bin"/>
  <path id="jdk.classpath.jdk">
    <fileset dir="${jdk.home.jdk}">
      <include name="jre/lib/alt-rt.jar"/>
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.jdk}"/>
  <property name="project.jdk.bin" value="${jdk.bin.jdk}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.jdk"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.junit4.0.classpath">
    <fileset dir="${basedir}/lib/junit.4.0">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm.jar"/>
    <pathelement location="${javac2.home}/asm-commons.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module joquery -->
  
  <dirname property="module.joquery.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.joquery" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.joquery" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.joquery" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.joquery" value="${compiler.args}"/>
  
  <property name="joquery.output.dir" value="${module.joquery.basedir}/out/production/joquery"/>
  <property name="joquery.testoutput.dir" value="${module.joquery.basedir}/out/test/joquery"/>
  
  <path id="joquery.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="joquery.module.production.classpath">
    <path refid="${module.jdk.classpath.joquery}"/>
    <path refid="library.junit4.0.classpath"/>
  </path>
  
  <path id="joquery.runtime.production.module.classpath">
    <pathelement location="${joquery.output.dir}"/>
    <path refid="library.junit4.0.classpath"/>
  </path>
  
  <path id="joquery.module.classpath">
    <path refid="${module.jdk.classpath.joquery}"/>
    <pathelement location="${joquery.output.dir}"/>
    <path refid="library.junit4.0.classpath"/>
  </path>
  
  <path id="joquery.runtime.module.classpath">
    <pathelement location="${joquery.testoutput.dir}"/>
    <pathelement location="${joquery.output.dir}"/>
    <path refid="library.junit4.0.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.joquery">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.joquery">
    <patternset refid="excluded.from.module.joquery"/>
  </patternset>
  
  <path id="joquery.module.sourcepath">
    <dirset dir="${module.joquery.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  <path id="joquery.module.test.sourcepath">
    <dirset dir="${module.joquery.basedir}">
      <include name="src-test"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.joquery" depends="compile.module.joquery.production,compile.module.joquery.tests" description="Compile module joquery"/>
  
  <target name="compile.module.joquery.production" depends="register.custom.compilers" description="Compile module joquery; production classes">
    <mkdir dir="${joquery.output.dir}"/>
    <javac2 destdir="${joquery.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.joquery}/javac">
      <compilerarg line="${compiler.args.joquery}"/>
      <bootclasspath refid="joquery.module.bootclasspath"/>
      <classpath refid="joquery.module.production.classpath"/>
      <src refid="joquery.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.joquery"/>
    </javac2>
    
    <copy todir="${joquery.output.dir}">
      <fileset dir="${module.joquery.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.joquery.tests" depends="register.custom.compilers,compile.module.joquery.production" description="compile module joquery; test classes" unless="skip.tests">
    <mkdir dir="${joquery.testoutput.dir}"/>
    <javac2 destdir="${joquery.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.joquery}/javac">
      <compilerarg line="${compiler.args.joquery}"/>
      <bootclasspath refid="joquery.module.bootclasspath"/>
      <classpath refid="joquery.module.classpath"/>
      <src refid="joquery.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.joquery"/>
    </javac2>
    
    <copy todir="${joquery.testoutput.dir}">
      <fileset dir="${module.joquery.basedir}/src-test">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.joquery" description="cleanup module">
    <delete dir="${joquery.output.dir}"/>
    <delete dir="${joquery.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.joquery" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.joquery" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>